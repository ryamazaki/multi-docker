{
    "AWSDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "tariqbeans/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "tariqbeans/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image":"tariqbeans/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image":"tariqbeans/multi-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "servver"]
        }
    
    ]
}